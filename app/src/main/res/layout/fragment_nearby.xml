<android.support.constraint.ConstraintLayout
    android:id="@+id/constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.urizev.birritas.view.nearby.NearbyFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.urizev.birritas.ui.MapMessageView
        android:id="@+id/map_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <RelativeLayout
        android:id="@+id/place_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorMapPlaceCard"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/place_selected_image"
            android:src="@color/colorImagePlaceholder"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_width="48dp"
            android:layout_height="48dp"/>
        <TextView
            android:id="@+id/place_selected_name"
            tools:text="La Quince Brewery"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toEndOf="@id/place_selected_image"
            android:layout_toRightOf="@id/place_selected_image"
            android:layout_alignTop="@id/place_selected_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"/>
        <TextView
            android:id="@+id/place_selected_address"
            tools:text="Avda, ancha es castilla, 4 Madrid"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toEndOf="@id/place_selected_image"
            android:layout_toRightOf="@id/place_selected_image"
            android:layout_below="@id/place_selected_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/go_to_user_location"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/place_card"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:srcCompat="@drawable/ic_my_location_white_24dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/place_card"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>
