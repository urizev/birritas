<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/favorites_content"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/favorites_margin"
        android:paddingStart="@dimen/favorites_margin"
        android:paddingRight="@dimen/favorites_margin"
        android:paddingEnd="@dimen/favorites_margin"
        tools:listitem="@layout/cell_beer_card"/>
    <com.urizev.birritas.ui.MessageView
        android:id="@+id/favorites_error"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.urizev.birritas.ui.LoadingView
        android:id="@+id/favorites_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>